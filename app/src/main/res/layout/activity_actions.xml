<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6E0EF"
    tools:context=".Actions">
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow"
        android:layout_marginTop="47dp"/>


    <Button
        android:id="@+id/nextbutton"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_background"
        android:text="Next"
        app:backgroundTint="@null" />

    <View
        android:id="@+id/rectangleView"
        android:layout_width="420dp"
        android:layout_height="49dp"
        android:background="@drawable/shape_nav" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ActionsImage"
            android:layout_width="365dp"
            android:layout_height="151dp"
         android:layout_marginTop="90dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/card_question"
                android:layout_width="233dp"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:src="@drawable/defaul" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resp1"
            android:layout_width="369dp"
            android:layout_height="67dp"
            android:layout_below="@id/ActionsImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            android:onClick="optionClickA">

            <TextView
                android:id="@+id/optionA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="10dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resp2"
            android:layout_width="371dp"
            android:layout_height="74dp"
            android:layout_below="@id/resp1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            android:onClick="optionClickB">

            <TextView
                android:id="@+id/optionb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="10dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resp3"
            android:layout_width="371dp"
            android:layout_height="76dp"
            android:layout_below="@id/resp2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            android:onClick="optionClickC">

            <TextView
                android:id="@+id/optionc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="10dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resp4"
            android:layout_width="371dp"
            android:layout_height="66dp"
            android:layout_below="@id/resp3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            android:onClick="optionClickD">

            <TextView
                android:id="@+id/optiond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="10dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which Sign is this?"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"/>
    </RelativeLayout>




<TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="360dp"
        android:layout_marginTop="16dp"
        android:text="EXIT"
        android:textColor="@color/white" />



    <Button
        android:id="@+id/returnbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/button_background"
        android:drawableRight="@drawable/baseline_arrow_back_24"
        app:backgroundTint="@null"
        android:layout_marginBottom="23dp"

        />


</RelativeLayout>