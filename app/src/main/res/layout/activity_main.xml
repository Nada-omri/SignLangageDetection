<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign To text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/buttonx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text To sign"
        android:layout_below="@id/buttonx1"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/buttonx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Learn"
        android:layout_below="@id/buttonx2"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_below="@id/buttonx3"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
