<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/rectangleView"
        android:layout_width="420dp"
        android:layout_height="49dp"
        android:background="@drawable/shape_nav" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ActionsImage"
        android:layout_width="365dp"
        android:layout_height="151dp"
        android:layout_below="@id/rectangleView"
        android:layout_marginTop="26dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp" >


        <ImageView
            android:id="@+id/card_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionClickA"
        android:id="@+id/resp1"
        android:layout_width="369dp"
        android:layout_height="67dp"
        android:layout_below="@id/ActionsImage"
        android:layout_marginTop="22dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp" >

        <TextView
            android:id="@+id/optionA"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionClickB"
        android:id="@+id/resp2"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_below="@id/resp1"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp" >>
        <TextView
            android:id="@+id/optionb"
            android:layout_width="192dp"
            android:layout_height="84dp"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:onClick="optionClickC"
        android:id="@+id/resp3"
        android:layout_width="354dp"
        android:layout_height="69dp"
        android:layout_below="@id/resp2"
        android:layout_marginTop="38dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp" >

        <TextView
            android:id="@+id/optionc"
            android:layout_width="134dp"
            android:layout_height="48dp"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionClickD"
        android:id="@+id/resp4"
        android:layout_width="358dp"
        android:layout_height="62dp"
        android:layout_below="@id/resp3"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp" >

        <TextView
            android:id="@+id/optiond"
            android:layout_width="286dp"
            android:layout_height="51dp"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="360dp"
        android:layout_marginTop="16dp"
        android:text="EXIT"
        android:textColor="@color/white" />



    <Button
        android:id="@+id/returnbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableRight="@drawable/baseline_arrow_back_24"
        app:backgroundTint="@null" />

</RelativeLayout>